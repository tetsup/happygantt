= render 'common/breadcrumb', { breadcrumbs: @requirement.breadcrumbs }
%h2
  = t('.')
= simple_form_for @requirement, url: requirement_path(@requirement.id) do |f|
  = render 'form', { f: f }
%h3
  = t('tickets.index')
= button_to t('new'), new_requirement_ticket_path(@requirement.id), method: :get, class: 'btn btn-primary'
= render 'tickets/list', { tickets: @requirement.tickets }
