%table.table
  %thead
    %tr
      %td
        = t('activerecord.attributes.project.name')
      %td
        = t('activerecord.attributes.project.description')
      %td
        = t('activerecord.attributes.project.status')
      %td
        = t('destroy')
  - projects.each do |p|
    %tr
      %td
        = link_to p.name, edit_project_path(p.id)
      %td
        = p.description
      %td
        = p.status_i18n
      %td
        = button_to t('destroy'), project_path(p.id), method: :delete, class: 'btn btn-danger btn-sm'
