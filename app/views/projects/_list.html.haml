%table.table
  %thead
    %tr
      %td
        = t('mission.name')
      %td
        = t('.name')
      %td
        = t('.description')
      %td
        = t('.status')
      %td
        = t('.destroy')
  - projects.each do |p|
    %tr
      %td
        = link_to p.mission.name, edit_mission_path(p.mission.id)
      %td
        = link_to p.name, edit_project_path(p.id)
      %td
        = p.description
      %td
        = p.status
      %td
        = button_to t('destroy'), project_path(p.id), method: :delete
